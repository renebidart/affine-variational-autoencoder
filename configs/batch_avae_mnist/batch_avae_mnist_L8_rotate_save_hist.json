{
    "name": "batch_avae_mnist_L8_rotate_save_hist",
    "n_gpu": 1,
    
    "arch": {
        "type": "AffineVAE",
        "args": {
                 "latent_size" : 8,
                 "img_size": 40,
                 "use_STN": false,
                 "batch_opt_params":{
                     "num_times": 20,
                     "iterations": 10
                     
                 }
        }
    },
    "data_loader": {
        "type": "make_generators_MNIST_CTRNFS",
        "args":{
            "files_dict_loc": "/media/rene/data/MNIST/files_dict.pkl",
            "batch_size": 128,
            "num_workers": 2,
            "return_size": 40,
            "rotation_range": [0, 360],
            "normalize": true, 
            "return_rot": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 5e-4
        }
    },

    "loss": {
        "type": "make_vae_loss",
        "args":{
            "KLD_weight": 1
        }
    },
    "metrics": [
        "BCE", "KLD"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 60,
            "gamma": 0.2
        }
    },
    "trainer": {
        "save_rot_loc": "/media/rene/data/equivariance/mnist/batch_avae_mnist_L8_rotate_save_hist",
        "epochs": 200,
        "save_dir": "/media/rene/data/equivariance/mnist",
        "save_period": 1,
        "verbosity": 1,
        "give_model_label": false,
        
        "monitor": "min val_loss",
        "early_stop": 100,
        
        "tensorboardX": true,
        "log_dir": "/media/rene/data/equivariance/mnist"
    }
}
